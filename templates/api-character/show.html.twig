{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between">
        <h1>Character</h1>
        <a class="btn btn-primary" href="{{ path('api_character_index') }}">back to list</a>
    </div>

    <div class="col-6 offset-3">
    <p>Je m'appelle <strong>{{ character.name }}</strong>.
        Je fais partie de La Guilde des Seigneurs !
        Je suis {{ feminin(character.kind, 'un') }} <strong>{{ character.kind }}</strong> de la caste <strong>{{ character.caste }}</strong>.
        Mon surnom est <strong>{{ character.surname }}</strong>.
        Mon intelligence est de <strong>{{ character.intelligence }}</strong> et ma force de <strong>{{ character.strength }}</strong>.
        Je suis assez {{ feminin(character.kind, 'fort') }} dans <strong>{{ character.knowledge }}</strong>
        J'ai une puissance de <strong>{{ character|puissance }}</strong>.
    </p>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ character.id }}</td>
                </tr>
                <tr>
                    <th>Identifier</th>
                    <td>{{ character.identifier|format_identifier }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ character.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ character.slug }}</td>
                </tr>
                <tr>
                    <th>Kind</th>
                    <td>{{ gender(character.kind)|raw }}{{ character.kind }}</td>
                </tr>
                <tr>
                    <th>Surname</th>
                    <td>{{ character.surname }}</td>
                </tr>
                <tr>
                    <th>Caste</th>
                    <td>{{ character.caste }}</td>
                </tr>
                <tr>
                    <th>Knowledge</th>
                    <td>{{ character.knowledge }}</td>
                </tr>
                <tr>
                    <th>Intelligence</th>
                    <td>{{ character.intelligence }}</td>
                </tr>
                <tr>
                    <th>Health</th>
                    <td>{{ character.health }}</td>
                </tr>
                <tr>
                    <th>Strength</th>
                    <td>{{ character.strength }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="https://la-guilde-des-seigneurs.com/medias{{character.image}}"</td>
                </tr>
                <tr>
                    <th>Creation</th>
                    <td>{{ character.creation ? character.creation|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Modification</th>
                    <td>{{ character.modification ? character.modification|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>


        <div class="d-flex justify-content-between">
            <a class="btn btn-success" href="{{ path('api_character_edit', {'identifier': character.identifier}) }}">Edit</a>

            {{ include('api-character/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
